//Variables
$open-sans = "Open Sans", sans-serif


// IMPORT DEV-FILES
//

@import "_reset.styl"
global-reset()

@import "_clearfix.styl"
@import "_mixins.styl"
//@import "_grid.styl"
@import "_typography.styl"
//@import "_sprites/*"


// Elements
@import "_icons.styl"
@import "_buttons.styl"
@import "_forms.styl"


// Blocks
//@import "blocks/**/*"


// ---
@import "_header.styl"
@import "_home.styl"
@import "_about.styl"

//
// ACTIVATE BOX-MODAL AND CLEARFIX
//

*, *:after, *:before
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	outline none


.cf
	clearfix()


//
// BASIC STYLE
//

html, body
	font-family $open-sans


.wrapper
	margin 0 auto
	clearfix()

a
	text-decoration none
	color inherit

h2
	margin-top: 92px
	font-weight 900
	font-size 47px
	color #02918c
	text-transform uppercase
	text-align center
	&:after
		display block
		content: '~~~~~ :: ~~~~~'
		margin-top 22px
		font-size 16px
		font-weight 400
		color #7e8287
	#services &
		text-align left

//
// IMPORT MEDIA-QUERIES
//

@import "_media.styl"
