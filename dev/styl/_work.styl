#works
	width 100%

.gallery
	position relative
	&:after
		content ''
		display table
		clear both
	.gallery-post
		float left
		width 25%
		height 240px
		text-align center
		background url(../img/work-4.jpg) center
		background-size cover
		padding 20px
		margin 0
		&:hover .gallery-post-message-wrap
			opacity 1
	.gallery-post-message-wrap
		display table
		width 100%
		height 100%
		background rgba(2, 145, 140, .85)
		color white
		opacity 0
		&:before
			content ''
			display inline-block
			height 100%
			vertical-align middle
	.gallery-post-message
			display inline-block
			vertical-align middle
	.gallery-post-message__title
		margin-bottom 10px
		font-weight 900
		font-size 16px
	.gallery-post-message__desc
		font-size 13px
